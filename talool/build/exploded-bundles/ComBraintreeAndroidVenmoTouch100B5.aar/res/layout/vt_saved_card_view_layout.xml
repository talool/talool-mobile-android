<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/vt_saved_card_view_dropdown_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/vt_button_underline"
        android:padding="0dp" >

        <RelativeLayout
            android:id="@+id/vt_saved_card_view_use_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_toLeftOf="@+id/vt_saved_card_view_show_cards_button"
            android:background="@drawable/vt_button"
            android:padding="8dp" >

            <TextView
                android:id="@+id/vt_saved_card_view_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/primary_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vt_saved_card_view_card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vt_saved_card_view_card_label"
                android:textColor="@color/vt_white_50pct"
                android:textSize="@dimen/secondary_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/vt_saved_card_view_venmo_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/venmo_logo" />
        </RelativeLayout>

        <ImageButton
            android:id="@id/vt_saved_card_view_show_cards_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/vt_saved_card_view_use_card_button"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/vt_saved_card_view_use_card_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@drawable/vt_button"
            android:src="@drawable/vt_expand" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vt_saved_card_view_learn_more_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/vt_saved_card_view_dropdown_submit"
        android:layout_marginTop="4dp" >

        <ImageView
            android:id="@+id/vt_saved_card_view_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vt_saved_card_view_learn_more"
            android:layout_alignTop="@+id/vt_saved_card_view_learn_more"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/vt_saved_card_view_learn_more"
            android:src="@drawable/info_button" />

        <TextView
            android:id="@+id/vt_saved_card_view_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/vt_saved_card_learn_more"
            android:textColor="@color/vt_dark_gray"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/zachmanc/Documents/workspace/VenmoTouch/venmoTouch/src/main/res/layout/vt_saved_card_view_layout.xml -->