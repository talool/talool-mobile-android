<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/locationBackground"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.89"
        android:src="@drawable/compass" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/locationSelect"
        android:textColor="@color/brown"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/boulderButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_bar1"
        android:text="Boulder, CO"
        android:onClick="onBoulderClicked"
        android:textColor="@color/tan"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/vancouverButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_bar1"
        android:text="Vancouver, WA"
        android:onClick="onVancouverClicked"
        android:textColor="@color/tan"
        android:textColorHint="@color/tan"
        android:textStyle="bold" />

</LinearLayout>
