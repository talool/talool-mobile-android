<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/iconView"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/icon_gift"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/teal"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginTop="5dp"
        android:layout_weight=".9"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
			android:singleLine="false"
			android:lines="2"
			android:maxLines="2"
            android:layout_marginLeft="5dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/activitySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="@color/gray_4"
            android:textSize="12sp"
            android:ellipsize="end"
            android:singleLine="true"
			android:lines="1"
			android:maxLines="1" />

        <TextView
            android:id="@+id/activityDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="@color/gray_4"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activityLinkArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="ArrowIcon"
        android:cropToPadding="false"
        android:src="@drawable/navigation_next_item" />

</LinearLayout><!-- From: file:/Users/zachmanc/Documents/workspace/talool-mobile-android-gradle/talool/src/main/res/layout/my_activity_item_row.xml -->