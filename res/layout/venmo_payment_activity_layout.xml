<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_deals_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="7sp"
    android:paddingLeft="9sp"
    android:paddingRight="9sp"
    android:paddingTop="7sp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tan_rounded"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/payment_deal_offer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boulder Free Book - $20.00"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
   
 <ScrollView
        android:id="@+id/pw_reset_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_deals_background">
        
    <com.venmo.touch.view.VTComboCardView
        android:id="@+id/combo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@drawable/tan_rounded"
        android:padding="10dp" />
 </ScrollView>

</LinearLayout>